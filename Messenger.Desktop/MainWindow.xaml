<Window x:Class="Messenger.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="820">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Левая часть -->
        <DockPanel Grid.Column="0">
            <!-- Шапка -->
            <Menu DockPanel.Dock="Top" Height="30px"></Menu>
            <!-- Body Список диалогов -->
            <ListBox></ListBox>
        </DockPanel>
        <!-- Правая часть -->
        <Grid Grid.Column="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="30px"/>
                <RowDefinition/>
                <RowDefinition Height="50px"/>
            </Grid.RowDefinitions>
            <!-- Шапка  -->
           <Border Grid.Row="0"></Border>
            <!-- Body Диалог -->
            <Border Grid.Row="1">
                <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"
                         Focusable="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ListBoxItem>
                                <Border>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock />
                                        <TextBlock />
                                    </StackPanel>
                                </Border>
                            </ListBoxItem>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            <!-- Footer Message -->
            <Border Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="60px"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition MaxWidth="60px"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" ></Button>
                    <TextBox Grid.Column="1" ></TextBox>
                    <Button Grid.Column="2"  ></Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
